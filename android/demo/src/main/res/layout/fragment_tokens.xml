<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TokensFragment">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/colors_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/color_background_primary"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Colors"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/padding_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/color_background_primary"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Padding"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/typography_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/color_background_primary"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Typography"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>